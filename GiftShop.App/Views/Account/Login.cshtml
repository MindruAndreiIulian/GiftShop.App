@model GiftShop.App.Models.Account.LoginVm


<div class="login-page justify-content-center">
    <div class="form">
        <div class="login">
            <div class="login-header">
                <h3>LOGIN</h3>
                <p>Please enter your credentials to login.</p>
            </div>
        </div>
        <form class="login-form" asp-action="Login">
            <label asp-for="Email">Email address</label>
            <input type="email" placeholder="email" asp-for="Email" aria-describedby="emailHelp" id="exampleInputEmail1" required/>

            <label asp-for="Password">Password</label>
            <input type="password" id="exampleInputPassword1" placeholder="Password" asp-for="Password" required/>

            <button type="submit" class="btn btn-primary">Submit</button>

        </form>
        @if (Model.AreCredentialsInvalid)
        {
            <p class="text-danger">Invalid credentials</p>
        }

        <p class="message">Not registered? <a asp-controller="Account" asp-action="Register">Create an account</a></p>
    </div>
</div>

<link href="~/css/Login.css" rel="stylesheet" />
